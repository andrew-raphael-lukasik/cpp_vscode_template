{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Build Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build_debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": "CMake: Configure Debug"
		},
		{
			"label": "CMake: Configure Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build_debug",
				"-S",
				".",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "CMake: Build Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build_release"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": "CMake: Configure Release"
		},
		{
			"label": "CMake: Configure Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build_release",
				"-S",
				".",
				"-DCMAKE_BUILD_TYPE=Release"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Program",
			"type": "shell",
			"command": "./build_debug/bin/MyProjectName",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"dependsOn": "CMake: Build Debug"
		}
	]
}